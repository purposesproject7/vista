# ================================
# MONGODB CONFIGURATION
# ================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password-here

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5000
NODE_ENV=production

# ================================
# JWT SECRET
# ================================
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-here

# ================================
# CORS ALLOWED ORIGINS
# ================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# ================================
# EMAIL CONFIGURATION
# ================================
# Email service credentials for sending notifications
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-app-password-here
EMAIL_FROM=Vista System <your-email@example.com>

# ================================
# ADMIN CREDENTIALS
# ================================
# Initial admin account details
ADMIN_EMAIL=admin@vit.ac.in
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_NAME=System Administrator
ADMIN_EMPLOYEE_ID=ADMIN001
ADMIN_SCHOOL=SCOPE
ADMIN_DEPARTMENT=CSE

# ================================
# OPTIONAL: MONGODB ATLAS
# ================================
# If you want to use MongoDB Atlas instead of local MongoDB,
# uncomment and set this variable. It will override the local MongoDB.
# MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/vista?retryWrites=true&w=majority
